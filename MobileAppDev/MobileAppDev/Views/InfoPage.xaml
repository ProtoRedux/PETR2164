<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppDev.Views.InfoPage"
             Title="Info">
    <!-- Layout children in two rows -->
    <StackLayout Grid.Row="1"
                     Margin="{StaticResource PageMargin}"
                     Spacing="24">
        <Image Source="bwb_logo.png" 
               VerticalOptions="Center"
               HeightRequest="70" />
        <!-- Layout children vertically -->

        <Label FontSize="22" HorizontalOptions="Center" Text="Just getting started?"/>
        <Label FontSize="18" Text="If this is your first time birdwatching then don't fret check out these handy links below to get yourself started." />
            <Button Text="Learn more with the RSPB"
                    Clicked="OnButtonRSPBClicked" />
            <Button Text="Look around with Naturetrek"
                    Clicked="OnButtonNATTREKClicked" />
            <Button Text="Get started with Bird Spot"
                    Clicked="OnButtonBSPOTClicked" />

    </StackLayout>

</ContentPage>